<h1>To-do List</h1>

<div class="tasks-list">
<ul>
<% @tasks.each do |task| %>
  <li class="task">
  <%= link_to task.title, task_path(task) %>
  <br>
  <%= link_to "Delete Task", task_path(task.id), method: :delete, data: {confirm: "Are you sure?"} %>
  </li>
<% end %>
</ul>
</div>

<div class="add">
<%= link_to "Add a task", new_task_path %>
</div>
